<Window x:Class="Character_Manager.Advance_Day_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Character_Manager"
        mc:Ignorable="d"
        Title="Advance The Day." SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label Content="How many days should be advanced? This operation cannot be reversed." HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="400"/>
        <Label Content="Days:" HorizontalAlignment="Left" Margin="125,41,0,0" VerticalAlignment="Top" Width="40"/>
        <TextBox x:Name="DaysTextBox" HorizontalAlignment="Right" Height="23" Margin="74,43,125,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button Content="Advance" Click="Advance_Button_Click" HorizontalAlignment="Left" Margin="10,72,0,10" VerticalAlignment="Bottom" Width="185"/>
        <Button Content="Cancel" IsCancel="True" HorizontalAlignment="Right" Margin="0,0,10,10" Width="186" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
